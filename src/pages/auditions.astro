---
import { Image } from 'astro:assets';
import { toHTML } from '@portabletext/to-html';
import Hero from '../components/widgets/Hero.astro';
import Layout from '../layouts/PageLayout.astro';
import SanityImage from '../components/common/SanityImage.astro';
import WidgetWrapper from '../components/ui/WidgetWrapper.astro';
import Ternary from '../components/Ternary.astro';
import { findLocalImage } from '../utils/images';
import { fetchAuditions } from '~/queries/TheatreSeasons';

const hero = await findLocalImage('~/assets/images/registration-hero.jpg');

const metadata = {
  title: 'Auditions | TCHA',
};
const showsWithUpcomingAuditions = await fetchAuditions();
---

<Layout metadata={metadata}>
  <WidgetWrapper isDark>
    <Fragment slot="bg">
      <div class="absolute inset-0">
        <Image src={hero} alt="Director instruction" class="h-full w-full object-cover object-[50%_15%]" />
      </div>
    </Fragment>
    <Hero backdropOverlay="md" title="Audition for a TCHA Show" />
  </WidgetWrapper>
  <WidgetWrapper containerClass="max-w-7xl mx-auto lg:py-8 md:py-8 py-8">
    <>
      <Ternary condition={showsWithUpcomingAuditions.length > 0}>
        <Fragment slot="false">
          <div
            class="mb-4 rounded-lg bg-blue-50 p-4 text-center text-sm text-blue-800 dark:bg-gray-800 dark:text-blue-400"
            role="alert"
          >
            <p class="font-medium">We do not currently have any auditions open for our upcoming shows.</p>
            <p class="font-medium">
              Please check out our current and past seasons of shows using the top menu and check back later for
              opportunities to audition!
            </p>
          </div>
        </Fragment>
        <Fragment slot="true">
          <h2 class="mb-6 text-left text-2xl font-bold text-gray-900 dark:text-slate-100">Upcoming Auditions</h2>
          <div class="mb-16 space-y-12">
            {
              showsWithUpcomingAuditions.map((show) => {
                const showLink = show.season?.slug ? `/theatre/${show.season.slug}/${show.slug}/` : undefined;
                const registrationLink = show.participation?.registration_link;
                const showRegistrationButton = Boolean(show.participation_is_open && registrationLink);
                const showRegistrationMessage = Boolean(!show.participation_is_open);
                const shouldRenderActions = Boolean(showLink || showRegistrationButton || showRegistrationMessage);
                return (
                  <article class="mx-auto max-w-5xl">
                    <div class="flex flex-col gap-6 rounded-2xl bg-white/80 p-6 shadow-md ring-1 ring-black/5 backdrop-blur transition hover:shadow-lg md:grid md:grid-cols-[minmax(0,320px)_minmax(0,1fr)] md:items-start md:gap-10 dark:bg-slate-800/90 dark:ring-slate-700">
                      <div class="overflow-hidden rounded-lg bg-gray-200 dark:bg-slate-700">
                        {show.hero ? (
                          showLink ? (
                            <a
                              href={showLink}
                              class="focus-visible:ring-primary/40 group block focus:outline-none focus-visible:ring-2"
                            >
                              <SanityImage
                                image={show.hero}
                                alt={show.hero.alt ?? show.title}
                                mode="contain"
                                className="h-full w-full object-contain transition duration-200 ease-out group-hover:scale-[1.02]"
                              />
                            </a>
                          ) : (
                            <SanityImage
                              image={show.hero}
                              alt={show.hero.alt ?? show.title}
                              mode="contain"
                              className="h-full w-full object-contain transition duration-200 ease-out"
                            />
                          )
                        ) : (
                          <div class="flex h-full w-full items-center justify-center text-sm text-gray-500 dark:text-gray-400">
                            Image coming soon
                          </div>
                        )}
                      </div>
                      <div class="flex flex-col gap-4">
                        <h3 class="font-heading text-3xl leading-tight font-bold tracking-tight text-gray-900 dark:text-slate-100">
                          {show.title}
                        </h3>
                        {show.participation?.details?.length ? (
                          <div
                            class="prose prose-gray max-w-none text-gray-700 dark:text-gray-300"
                            set:html={toHTML(show.participation.details)}
                          />
                        ) : (
                          <p class="text-sm text-gray-600 dark:text-gray-300">
                            Audition details will be available soon.
                          </p>
                        )}
                        {shouldRenderActions && (
                          <div class="flex flex-wrap items-center gap-3 text-sm">
                            {showLink && (
                              <a
                                class="btn-secondary inline-flex items-center justify-center gap-2 px-4 py-2"
                                href={showLink}
                              >
                                General Information
                              </a>
                            )}
                            {showRegistrationButton ? (
                              <a
                                class="focus:ring-primary/40 bg-primary inline-flex items-center justify-center gap-2 rounded-md px-4 py-2 font-semibold text-white transition hover:brightness-95 focus:ring-2 focus:outline-none"
                                href={registrationLink}
                                target="_blank"
                                rel="noopener noreferrer"
                              >
                                Audition Information
                              </a>
                            ) : (
                              showRegistrationMessage && (
                                <span class="text-gray-600 italic dark:text-gray-300">
                                  Audition signups are not yet open. Check back soon!
                                </span>
                              )
                            )}
                          </div>
                        )}
                      </div>
                    </div>
                  </article>
                );
              })
            }
          </div>
        </Fragment>
      </Ternary>
      <div class="mt-16">
        <div
          class="mx-auto max-w-3xl rounded-2xl bg-white/80 p-6 shadow-md ring-1 ring-black/5 backdrop-blur dark:bg-slate-800/90 dark:ring-slate-700"
        >
          <h3 class="mb-3 text-left text-xl font-bold text-gray-900 dark:text-slate-100">Typical Audition Schedule</h3>
          <ul class="mb-0 list-disc space-y-2 text-left text-gray-700 dark:text-gray-300">
            <li>Auditions for the Fall Musical (ages 13â€“18) are typically held in May.</li>
            <li>
              Auditions for our two winter plays - one for children (ages 8-13) and one for teens (ages 13-18) - are
              usually held in November or early December.
            </li>
            <li>Auditions for the Summer Musical (ages 8-13) are typically scheduled for late March or early April.</li>
          </ul>
        </div>
      </div>
    </>
  </WidgetWrapper>
</Layout>
